#!/bin/sh
if [ $# -le 0 ]; then
    echo 1>&2 Usage: $0 MakefileG.local
    exit 127
fi
if [ -e $1 ]; then
    rm $1
fi
perl fmkmf.pl -f90 ifort -opt '-O3 -parallel' -mpi '-cpp' \
-l '-lblas -llapack -parallel' -o './objs/EARTH/Release' \
-p .:INV:UTILS:FIELDS/FiniteDiff3D:EARTH:SENS:EARTH/DICT:EARTH/modelParam:EARTH/FWD:EARTH/ioMod:EARTH/Basics:EARTH/Jacobian \
Global3D.f90 > $1
