#!/bin/sh
if [ $# -le 0 ]; then
    echo 1>&2 Usage: $0 Makefile2d.local
    exit 127
fi
if [ -e $1 ]; then
    rm $1
fi
perl fmkmf.pl -f90 pgf95 -opt '-g -Mprof=lines -Mbounds' -mpi '-Mpreprocess' \
-l '-L/usr/lib64 -lblas -llapack -lpgftnrtl -Mprof=lines' -o './objs/2D_MT/Profile' \
-p .:INV:LAPACK:SENS:UTILS:2D_MT:2D_MT/DICT:2D_MT/modelParam:2D_MT/FWD:2D_MT/ioMod Mod2DMT.f90 > $1
