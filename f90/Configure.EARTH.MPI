#!/bin/sh
if [ $# -le 0 ]; then
    echo 1>&2 Usage: $0 MakefileG.local
    exit 127
fi
if [ -e $1 ]; then
    rm $1
fi
perl fmkmf.pl -f90 mpif90 -opt '-O2' \
-mpi '-Bstatic  -Mipa=fast  -Mextend  -Kieee -Mpreprocess -DMPI' \
-l '-L/usr/lib64 -llapack -lblas -lpgftnrtl' -o './objs/EARTH/MPIRelease' \
-p .:INV:MPI:UTILS:FIELDS/FiniteDiff3D:EARTH:SENS:EARTH/DICT:EARTH/modelParam:EARTH/FWD:EARTH/ioMod:EARTH/Basics:EARTH/Jacobian \
Global3D.f90 > $1
